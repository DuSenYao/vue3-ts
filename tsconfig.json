{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "noImplicitThis": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "declaration": true,
    "verbatimModuleSyntax": true,
    "declarationMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "types": ["element-plus/global", "vite-plugin-svg-icons/client", "vite/client", "jest", "node"],
    "paths": {
      "/@/*": ["src/*"],
      "/#/*": ["types/*"]
    },
    "noLib": false,
    "strictFunctionTypes": false,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "removeComments": true
  },
  "ts-node": {
    "esm": true /* 启用ECMAScript模块互操作，解决 ts-node 直接运行 .ts 文件报错问题 */
  },
  "include": ["*.d.ts", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "vite.config.ts"],
  "exclude": ["node_modules", "dist", "tests/server/**/*.ts", "**/*.js"]
}
